<p id="notice"><%= notice %></p>

<h1>Bookings</h1>

<% puts '5555555555' %>
<% if @bookings.nil? %>
<%= link_to "Book a Flight",   flights_path %>
<% else %>
<table>
  <thead>
    <tr>
      <th>Flight Name</th>
      <th>Name</th>
      <th>Pnr</th>
      <th>Seats</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bookings.each do |booking| %>
      <tr>
        <td><%= get_flight_name(booking.flight_id) %>
             <%= get_flight_lname(booking.flight_id) %></td>
        <td><%= booking.name %></td>
        <td><%= booking.pnr %></td>
        <td><%= booking.seats %></td>
        <td><%= link_to 'Show', booking %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class = "rightsection">
<%= form_tag(bookseat_path, method: :get) do %>
   <strong><p> Enter PNR </p></strong>
   <%= text_field_tag(:pnr, params[:pnr]) %>
   <%= submit_tag ("Search") %>
 <% end %>
</div>
<% end %>

<br>
